<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style/style.css">
    <link rel="stylesheet" href="/style/popUp.css">

    <script defer src="/js/getplan.js"></script>

    <title>Plans</title>
</head>

<body class="plansBody">


    <% if (typeof user != 'undefined') { %>
        <%- include("./partials/userNav.ejs") %> 
      <% } else {%>
        <%- include("./partials/guestNav.ejs") %> 
      <% } %> 



    <div class="gridContanior">

        <div class="grid">

            <div class="textDiv">
                <h1 class="readyPlansText">Choose your plan</h1>
            </div>

            <!-- for each plan there is a div (query the plans from the database) -->
            <% plans.forEach( plan => { %> 

                <a href="/plans/<%= plan.name%>/<%= plan.plan_id%>">
                    <div class="plan">
                        <p class="planName"><%= plan.name %></p>
                    </div>
                </a>
            <% })%> 


            <a href="/plans-chooseDay">
                <div class="plan">
    
                    <img src="/img/bulking.png" class="planImg" alt="">
    
                    <p class="planName">Bulking</p>
    
                </div>
            </a>

        </div>

    </div>

    <div class="addPlan">
        <button data-modal-target = '#modal'>+</button>
    </div>

    <div class="modal" id="modal">
        <div class = 'modal-header'>
            <div class = 'title'>Choose a name for your plan</div>
            <button data-close-button=" close-button"  class = 'close-button'>&times;</button>
        </div>

        <div class="modal-body">

            <form action="/plans-chooseDay" method="post">
                 <input name="planNameValue"  placeholder="Example: Yousef Plan :D" type="text" id="planInput">
                 <button id="submit">save</button>
            </form>
        </div>
    </div>
    <div  id="overlay"></div>



    <script src="/js/navbar.js"></script>
</body>

</html>